#!/bin/bash

percent=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep percentage \
| sed 's/percentage://' | xargs)

status=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep state \
| sed 's/state://' | xargs)

figlet -f future Battery: $percent
figlet -f future $status
