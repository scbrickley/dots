#!/bin/bash
pacman -S \
	feh \
	alacritty \
	go \
	inkscape \
	fd \
	fzf \
	ripgrep \
	gimp \
	figlet \
	neofetch \

pamac build \
	firefox-nightly \
	spotify \
	gotop \
	zoom \
	discord \
	freetube \
	ttf-iosevka \
	toilet \

./git_setup

# Install Rust
curl https://sh.rustup.rs -sSf | sh

mkdir -p $HOME/code $HOME/go/src $HOME/go/bin
mkdir -p $HOME/.vim/swap $HOME/.vim/undodir $HOME/.vim/colors

ssh keygen -t rsa
